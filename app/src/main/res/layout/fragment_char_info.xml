<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                android:orientation="horizontal"
                android:visibility="visible"

                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_122sdp"
                    android:background="@drawable/bg_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingRight="@dimen/_14sdp">

                    <ImageView
                        android:id="@+id/rlt_back"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/comm_ico_back" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_b"
                        android:text="성격정보"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginRight="@dimen/_13sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_6sdp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_white_01"
                        android:orientation="vertical"
                        android:padding="@dimen/_3sdp">


                        <LinearLayout
                            android:id="@+id/layout_discInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_15sdp">

                            <ImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/info_ico_question" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/nanum_square_r"

                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/_15sdp"
                                android:text="DISC란?"
                                android:textColor="#000000"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#dddddd" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:paddingBottom="@dimen/_20sdp"
                                android:id="@+id/layout_charInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_15sdp">

                                <ImageView
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/info_ico_myinfo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:fontFamily="@font/nanum_square_r"

                                    android:gravity="center"
                                    android:lineSpacingExtra="@dimen/_15sdp"
                                    android:text="내 성격 정보"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <View


                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <LinearLayout
                                android:paddingBottom="@dimen/_20sdp"
                                android:id="@+id/layout_loverInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_15sdp">

                                <ImageView
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/info_ico_mylover" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:fontFamily="@font/nanum_square_r"

                                    android:gravity="center"
                                    android:lineSpacingExtra="@dimen/_15sdp"
                                    android:text="나와 잘 맞는 성격"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_charList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/bg_rounded_white_01"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_20sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/info_ico_view" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_r"

                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/_15sdp"
                            android:text="다른 유형 성격 보기"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</layout>