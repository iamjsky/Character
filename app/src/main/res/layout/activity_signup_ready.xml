<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".ui.page.intro.SignupReadyActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt_back"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@color/color_transparent"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_arrow_back" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/registering"
                android:textColor="@color/color_dark"
                android:textSize="16sp"
                app:fontname="@{`NotoSansCJKkr-Medium.otf`}">

            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <ImageView
                android:layout_width="85.6dp"
                android:layout_height="115.2dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_vs_big" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="가입 버튼을 누르면 "
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/txv_useterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="이용약관"
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="과"
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/txv_privacypolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text=" 개인정보 취급방침"
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="그리고"
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/txv_gpsterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text=" 위치기반 서비스 약관"
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="에 동의합니다"
                    android:textColor="@color/color_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/bg_gmail">

                    <Button
                        android:id="@+id/btnEmail"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/round20_transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/email_signup"
                        android:textColor="@color/color_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/email_signup"
                        android:src="@drawable/ico_gmail" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/add_img_006">

                    <Button
                        android:id="@+id/btnFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/round20_transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/facebook_signup"
                        android:textColor="@color/color_white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/facebook_signup"
                        android:src="@drawable/ico_facebook" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_naver">

                    <Button
                        android:id="@+id/btnNaver"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/round20_transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/naver_signup"
                        android:textColor="@color/color_white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/naver_signup"
                        android:src="@drawable/ico_naver" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_kakao">

                    <Button
                        android:id="@+id/btnKakao"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/round20_transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/kakao_signup"
                        android:textColor="@color/color_black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/kakao_signup"
                        android:src="@drawable/ico_kakao" />

	                <com.kakao.usermgmt.LoginButton
	                    android:id="@+id/com_kakao_login"
	                    android:layout_width="300dp"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="20dp"
	                    android:layout_marginRight="20dp"
	                    android:layout_marginBottom="30dp"
	                    android:visibility="gone"
	                    app:layout_constraintLeft_toLeftOf="parent"
	                    app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>
