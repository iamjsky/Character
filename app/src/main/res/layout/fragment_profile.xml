<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <include layout="@layout/view_top_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <com.jackandphantom.circularimageview.CircleImage
                    android:id="@+id/iv_userProfileImg"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/color_transparent"
                    android:src="@drawable/temp_item_1"
                    app:add_shadow="true"
                    app:border_color="#ffffff"
                    app:border_width="@dimen/_4sdp"
                    app:shadow_color="#0f000000"
                    app:shadow_radius="20" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_rounded_white_panel_04"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_18sdp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:text=""
                                android:id="@+id/txv_manner1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_36sdp"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:textColor="@color/color_dark"
                                android:textSize="@dimen/_30sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:text=""
                                android:id="@+id/txv_manner2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_36sdp"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:textColor="@color/color_fe013c"
                                android:textSize="@dimen/_30sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:text="노빠꾸 of 노빠꾸"
                            android:id="@+id/txv_manner_desc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:textColor="@color/color_dark"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:text=""
                            android:id="@+id/txv_manner_desc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center|top"
                            android:lineSpacingExtra="3dp"
                            android:textColor="@color/color_dark"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_34sdp"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:background="#dddddd" />
                    <LinearLayout
                        android:gravity="left|center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/nanum_square_b"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />



                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_marginRight="@dimen/_7sdp"
                                android:background="#000000" />
                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/nanum_square_b"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/nanum_square_b"
                                android:text="세"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">



                            <TextView
                                android:gravity="center"
                                android:id="@+id/tv_job"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/nanum_square_r"
                                android:text="일이삼사오육칠..."
                                android:textColor="#545454"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <View
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_5sdp"

                                android:layout_marginRight="@dimen/_5sdp"

                                android:background="#545454" />

                            <TextView

                                android:gravity="center"
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/nanum_square_r"
                                android:text="제주특별자치도..."
                                android:textColor="#545454"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />
                            <View
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="#545454" />
                            <TextView
                                android:gravity="center"
                                android:id="@+id/tv_body_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/nanum_square_r"
                                android:text="건장한"
                                android:textColor="#545454"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlProfile"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/setting_ico_profile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:fontFamily="@font/nanum_square_r"
                            android:text="프로필 수정"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/setting_ico_more" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlEnergy"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/setting_ico_energy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:fontFamily="@font/nanum_square_r"
                            android:text="에너지 충전"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/setting_ico_more" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlType"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/setting_ico_lover" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:fontFamily="@font/nanum_square_r"
                            android:text="이상형 설정"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/setting_ico_more" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvHint"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical"
                        android:text="다수의 신고로 계정이 정지중입니다. 남은 정지가간 60일"
                        android:textColor="#f24756"
                        android:textSize="13sp"
                        android:visibility="gone"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <RelativeLayout
                        android:id="@+id/rlAsk"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/setting_ico_question" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:fontFamily="@font/nanum_square_r"
                            android:text="관리자 문의"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/setting_ico_more" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlSetting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/setting_ico_setting" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:fontFamily="@font/nanum_square_r"
                            android:text="설정"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/setting_ico_more" />
                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</layout>