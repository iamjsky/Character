<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/navigation_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_top_header"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:src="@drawable/comm_ico_back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_profile"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/temp_user_round"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:gravity="left|center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/nanum_square_b"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바톱바"
                            android:textColor="@color/color_white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:gravity="center|left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:gravity="left|center"

                                android:layout_marginRight="@dimen/_8sdp"
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:fontFamily="@font/nanum_square_r"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textColor="@color/color_white"
                                android:text="닉네임"
                                android:textSize="10sp" />

                            <TextView
                                android:gravity="left|center"
                                android:layout_weight="1"
                                android:id="@+id/tv_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:text="2020.6.17"
                                android:textColor="@color/color_white"
                                android:textSize="10sp"
                               />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/nanum_square_b"
                    android:src="@drawable/ic_more" />

            </LinearLayout>

            <android.support.v4.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f6f6f6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f6f6f6"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imv_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" />

                        <ImageView
                            android:id="@+id/imv_image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/imv_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />
                        <!--<android.support.v4.view.ViewPager
                            android:id="@+id/vpBanner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/ciBanner"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="15dp"
                            app:fillColor="#ffffff"
                            app:pageColor="#acacac"
                            app:radius="3dp"
                            app:spacing="15dp"
                            app:strokeWidth="0.0dip" />-->

                    </LinearLayout>

                    <TextView

                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_r"
                        android:paddingStart="19dp"
                        android:paddingTop="13dp"
                        android:paddingEnd="19dp"
                        android:paddingBottom="13dp"
                        android:textColor="@color/color_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="14dp"
                        android:fontFamily="@font/nanum_square_b"
                        android:textColor="#545454"
                        android:textSize="12sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_myProfile"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temp_user_round" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/_15sdp">

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:background="@color/color_white"
                        android:fontFamily="@font/nanum_square_r"
                        android:hint="댓글 작성하기..."
                        android:paddingLeft="@dimen/_16sdp"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/community_ico_pen" />

                    <TextView
                        android:id="@+id/tv_comment_save"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/nanum_square_r"
                        android:gravity="center"
                        android:text="확인"
                        android:textColor="@color/char_main_color"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignBottom="@+id/et_comment"
                        android:background="#545454" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/btnMore"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="20dp"
                android:background="@color/color_white"
                android:text="신고하기"
                android:textColor="@color/color_black"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</layout>