<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/navigation_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_top_header"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/comm_ico_back" />

                <android.support.constraint.ConstraintLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imv_profile"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/temp_user_round"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView

                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/nanum_square_b"
                        android:gravity="center"
                        android:text="톱바"
                        android:textColor="@color/color_white"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/tv_nickname"
                        app:layout_constraintStart_toEndOf="@+id/imv_profile"
                        app:layout_constraintTop_toTopOf="@+id/imv_profile" />

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nanum_square_r"
                        android:text="닉네임"
                        android:textColor="@color/color_white"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="2020.6.17"
                        android:textColor="@color/color_white"
                        android:textSize="10sp"
                        android:fontFamily="@font/nanum_square_r"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
                        app:layout_constraintStart_toEndOf="@+id/tv_nickname"
                        app:layout_constraintTop_toTopOf="@+id/tv_nickname" />

                </android.support.constraint.ConstraintLayout>

                <ImageButton
                    android:fontFamily="@font/nanum_square_b"
                    android:id="@+id/btnMenu"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_more" />

            </LinearLayout>

            <android.support.v4.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6">

                <LinearLayout
                    android:background="#f6f6f6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="#f6f6f6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imv_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" />

                        <ImageView
                            android:id="@+id/imv_image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/imv_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />
                        <!--<android.support.v4.view.ViewPager
                            android:id="@+id/vpBanner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/ciBanner"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="15dp"
                            app:fillColor="#ffffff"
                            app:pageColor="#acacac"
                            app:radius="3dp"
                            app:spacing="15dp"
                            app:strokeWidth="0.0dip" />-->

                    </LinearLayout>

                    <TextView

                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="19dp"
                        android:paddingTop="13dp"
                        android:paddingEnd="19dp"
                        android:paddingBottom="13dp"
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanum_square_r" />

                    <TextView
                        android:fontFamily="@font/nanum_square_b"
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="14dp"
                        android:textColor="#545454"
                        android:textSize="12sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#dddddd" />

            <LinearLayout
                android:background="@color/color_white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/iv_myProfile"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temp_user_round"
                    />
                <RelativeLayout
                    android:paddingRight="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:paddingLeft="@dimen/_16sdp"
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:background="@color/color_white"
                        android:hint="댓글 작성하기..."
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_square_r" />
                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/community_ico_pen"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_comment_save"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:text="확인"
                        android:textColor="@color/char_main_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_square_r" />
                    <View
                        android:layout_alignBottom="@+id/et_comment"
                        android:background="#545454"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/btnMore"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="20dp"
                android:background="@color/color_white"
                android:text="신고하기"
                android:textColor="@color/color_black"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</layout>