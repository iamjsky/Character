<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="277dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_user_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rect_storke_80ffffff"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/ll_profile"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_character1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_dark"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

                    <TextView
                        android:id="@+id/txv_character2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_fe013c"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txv_ideal_character"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="강한주도형\n강한사교형"
                    android:textAlignment="textStart"
                    android:textColor="@color/color_dark"
                    android:textSize="10sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_eval_profile_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="D-7"
                    android:textColor="@color/color_ff3e40"
                    android:textSize="12sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="빨간망토챠챠"
                    android:textColor="@color/color_ff3e40"
                    android:textSize="12sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="서울"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="24세"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="서울대"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="학생"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</layout>