<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlDismiss"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@color/popup_bg">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/color_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/color_transparent"
                    android:foreground="?attr/selectableItemBackground"
                    android:minWidth="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/confirm"
                    android:textColor="@color/color_dark"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="1차 유형"
                    android:textColor="@color/color_281f1c"
                    android:gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_type2"
                    android:layout_width="0dip"
                    android:text="2차 유형"
                    android:gravity="center"
                    android:textColor="@color/color_281f1c"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.wx.wheelview.widget.WheelView
                    android:id="@+id/whvContent1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_split"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="~"/>

                <com.wx.wheelview.widget.WheelView
                    android:id="@+id/whvContent2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>