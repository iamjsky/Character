<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sc_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                android:orientation="horizontal"
                android:visibility="visible"

                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_122sdp"
                    android:background="@drawable/bg_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingRight="@dimen/_14sdp">

                    <ImageView
                        android:id="@+id/rlt_back"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/comm_ico_back" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_b"
                        android:text="성격궁합 측정"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <!--성격궁합측정-->
                <LinearLayout
                    android:id="@+id/layout_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_58sdp"

                    android:orientation="vertical"

                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_205sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:background="@drawable/relation_img_02"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:padding="@dimen/_22sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_panelTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:background="@color/color_transparent"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="성격 궁합 측정기"
                                android:textColor="@color/char_main_color"
                                android:textSize="@dimen/_20sdp" />

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/tv_panelTitle"
                                android:gravity="center"
                                android:paddingRight="@dimen/_5sdp">

                                <View

                                    android:layout_width="@dimen/_152sdp"
                                    android:layout_height="@dimen/_5sdp"

                                    android:background="#1AFF0000" />
                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="남자"
                                android:textColor="#000000"
                                android:textSize="@dimen/_12sdp" />


                            <LinearLayout
                                android:id="@+id/layout_charManArea"
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="@dimen/_95sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/bg_circle_01"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:visibility="visible"
                                    android:id="@+id/layout_charMan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/jalnan_n"
                                        android:gravity="center"
                                        android:text="DISC"
                                        android:textColor="#858585"
                                        android:textSize="@dimen/_14sdp" />

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"
                                        android:text="유형\n선택하기"
                                        android:textColor="#858585"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_charSelectMan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/jalnan_n"
                                    android:gravity="center"
                                    android:text="D"
                                    android:textColor="@color/char_d_color"
                                    android:textSize="@dimen/_30sdp" />
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/relation_ico_heart" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="여자"
                                android:textColor="#000000"
                                android:textSize="@dimen/_12sdp" />


                            <LinearLayout
                                android:id="@+id/layout_charWomanArea"
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="@dimen/_95sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/bg_circle_01"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:visibility="visible"
                                    android:id="@+id/layout_charWoman"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/jalnan_n"
                                        android:gravity="center"
                                        android:text="DISC"
                                        android:textColor="#858585"
                                        android:textSize="@dimen/_14sdp" />

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"
                                        android:text="유형\n선택하기"
                                        android:textColor="#858585"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_charSelectWoman"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/jalnan_n"
                                    android:gravity="center"
                                    android:text="D"
                                    android:textColor="@color/char_d_color"
                                    android:textSize="@dimen/_30sdp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_checkChemistry"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/bg_rounded_03"
                        android:fontFamily="@font/nanum_square_b"
                        android:gravity="center"
                        android:text="궁합 확인"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <!--결과-->
                <LinearLayout
                    android:id="@+id/layout_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_52sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_6sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_white_panel_03"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_28sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_30sdp">

                        <ImageView
                            android:id="@+id/iv_percent"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_88sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/relation_img_99" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_charMan_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"

                                android:background="@color/color_transparent"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="D"
                                android:textColor="@color/char_d_color"
                                android:textSize="@dimen/_30sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ico_heart_eval_red" />

                            <TextView
                                android:id="@+id/tv_charWoman_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:background="@color/color_transparent"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="S"
                                android:textColor="@color/char_s_color"
                                android:textSize="@dimen/_30sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_charMan_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_b"
                                android:gravity="center"
                                android:text="D"
                                android:textColor="@color/char_d_color"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="와"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tv_charWoman_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_b"
                                android:gravity="center"
                                android:text="S"
                                android:textColor="@color/char_s_color"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="의 성격궁합은"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tv_charPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_b"
                                android:gravity="center"
                                android:text="99%"
                                android:textColor="@color/char_s_color"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="입니다."
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_white_panel_03"
                        android:orientation="vertical"
                        android:padding="@dimen/_30sdp">

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center|left"
                            android:lineSpacingExtra="@dimen/_3sdp"
                            android:text="D가 리더쉽을 발휘해 S를 주도해주면, 우유부단한 S는 잘 따르는 조화로운 커플 입니다.\n다만, d가 너무 강압적이면 s가 힘들어요ㅠ\n소통을 할 때 d는 D가 리더쉽을 발휘해 S를 주도해주면, 우유부단한 S는 잘 따르는 조화로운 커플 입니다.\n다만, d가 너무 강압적이면 s가 힘들어요ㅠ\n소통을 할 때 d는 "
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/bg_rounded_10"
                        android:fontFamily="@font/nanum_square_r"
                        android:paddingLeft="@dimen/_24sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="공유하기"
                        android:textColor="@color/char_main_color"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>


            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
        <!--팝업-->
        <LinearLayout
            android:id="@+id/layout_charSelectPopup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_35sdp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_d"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_white_01"
                    android:fontFamily="@font/jalnan_n"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/char_d_color"
                    android:textSize="@dimen/_30sdp" />


                <TextView
                    android:id="@+id/tv_i"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_white_01"
                    android:fontFamily="@font/jalnan_n"
                    android:gravity="center"
                    android:text="I"
                    android:textColor="@color/char_i_color"
                    android:textSize="@dimen/_30sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_s"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_white_01"
                    android:fontFamily="@font/jalnan_n"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/char_s_color"
                    android:textSize="@dimen/_30sdp" />


                <TextView
                    android:id="@+id/tv_c"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_white_01"
                    android:fontFamily="@font/jalnan_n"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/char_c_color"
                    android:textSize="@dimen/_30sdp" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</layout>