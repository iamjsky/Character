<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f6f6f6"
            android:orientation="horizontal"
            android:visibility="visible"

            >

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="@dimen/_122sdp"
                android:background="@drawable/bg_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_14sdp"
                android:paddingRight="@dimen/_14sdp">

                <ImageView
                    android:id="@+id/rlt_back"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/comm_ico_back" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_b"
                    android:text="성격궁합 측정"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_58sdp"

                android:orientation="vertical"

                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_205sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:background="@drawable/relation_img_02"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:padding="@dimen/_22sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_panelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:background="@color/color_transparent"
                            android:fontFamily="@font/jalnan_n"
                            android:gravity="center"
                            android:text="성격 궁합 측정기"
                            android:textColor="@color/char_main_color"
                            android:textSize="@dimen/_20sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_panelTitle"
                            android:gravity="center"
                            android:paddingRight="@dimen/_5sdp">

                            <View

                                android:layout_width="@dimen/_152sdp"
                                android:layout_height="@dimen/_5sdp"

                                android:background="#1AFF0000" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center"
                            android:text="남자"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:id="@+id/layout_charMan"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="@dimen/_95sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_circle_01"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="DISC"
                                android:textColor="#858585"
                                android:textSize="@dimen/_14sdp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="유형\n선택하기"
                                android:textColor="#858585"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/relation_ico_heart" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center"
                            android:text="남자"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:id="@+id/layout_charWoman"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="@dimen/_95sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_circle_01"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="DISC"
                                android:textColor="#858585"
                                android:textSize="@dimen/_14sdp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="유형\n선택하기"
                                android:textColor="#858585"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_checkChemistry"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_rounded_03"
                    android:fontFamily="@font/nanum_square_b"
                    android:gravity="center"
                    android:text="궁합 확인"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_charSelectPopup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3000000"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_35sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_d"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rounded_white_01"
                        android:fontFamily="@font/jalnan_n"
                        android:gravity="center"
                        android:text="D"
                        android:textColor="@color/char_d_color"
                        android:textSize="@dimen/_30sdp" />


                    <TextView
                        android:id="@+id/tv_i"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rounded_white_01"
                        android:fontFamily="@font/jalnan_n"
                        android:gravity="center"
                        android:text="I"
                        android:textColor="@color/char_i_color"
                        android:textSize="@dimen/_30sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_s"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rounded_white_01"
                        android:fontFamily="@font/jalnan_n"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/char_s_color"
                        android:textSize="@dimen/_30sdp" />


                    <TextView
                        android:id="@+id/tv_c"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rounded_white_01"
                        android:fontFamily="@font/jalnan_n"
                        android:gravity="center"
                        android:text="C"
                        android:textColor="@color/char_c_color"
                        android:textSize="@dimen/_30sdp" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_58sdp"

                android:orientation="vertical"

                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_205sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:background="@drawable/relation_img_02"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:padding="@dimen/_22sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_panelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:background="@color/color_transparent"
                            android:fontFamily="@font/jalnan_n"
                            android:gravity="center"
                            android:text="성격 궁합 측정기"
                            android:textColor="@color/char_main_color"
                            android:textSize="@dimen/_20sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_panelTitle"
                            android:gravity="center"
                            android:paddingRight="@dimen/_5sdp">

                            <View

                                android:layout_width="@dimen/_152sdp"
                                android:layout_height="@dimen/_5sdp"

                                android:background="#1AFF0000" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center"
                            android:text="남자"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:id="@+id/layout_charMan"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="@dimen/_95sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_circle_01"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="DISC"
                                android:textColor="#858585"
                                android:textSize="@dimen/_14sdp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="유형\n선택하기"
                                android:textColor="#858585"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/relation_ico_heart" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_r"
                            android:gravity="center"
                            android:text="남자"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:id="@+id/layout_charWoman"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="@dimen/_95sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_circle_01"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jalnan_n"
                                android:gravity="center"
                                android:text="DISC"
                                android:textColor="#858585"
                                android:textSize="@dimen/_14sdp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_r"
                                android:gravity="center"
                                android:text="유형\n선택하기"
                                android:textColor="#858585"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_checkChemistry"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_rounded_03"
                    android:fontFamily="@font/nanum_square_b"
                    android:gravity="center"
                    android:text="궁합 확인"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</layout>