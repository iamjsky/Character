<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <include layout="@layout/view_top_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lly_order_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:text="상대 DISC 유형"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <TextView
                        android:id="@+id/txv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="#f7f7f7"
                        android:paddingStart="5dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="14dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="소통방법"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <LinearLayout
                    android:id="@+id/lly_select_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#f7f7f7"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="14dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvD"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="#333333"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvI"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="I"
                            android:textColor="#fe013c"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvC"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="C"
                            android:textColor="#4267b2"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvS"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="#0fc044"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txv_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#f7f7f7"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="14dp"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="대화스킬"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:visibility="gone"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/txv_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#f7f7f7"
                    android:paddingStart="5dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="14dp"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:visibility="gone"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
