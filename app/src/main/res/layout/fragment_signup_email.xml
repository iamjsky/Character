<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        tools:context=".ui.page.intro.SignupActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


<LinearLayout
    android:paddingBottom="@dimen/_10sdp"
    android:paddingTop="@dimen/_38sdp"
    android:paddingRight="@dimen/_42sdp"
    android:paddingLeft="@dimen/_42sdp"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:fontFamily="@font/jalnan_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:textColor="#ff056a"
        android:gravity="center"
        android:text="성격지상주의"
        />
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/nanum_square_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:textColor="#000000"

        android:text="환영합니다!"
        />
    <TextView
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/nanum_square_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:textColor="#000000"

        android:text="성격지상주의 사용을 위해 회원가입을 해주세요."
        />

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/nanum_square_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="#ff056a"
        android:text="계정 정보"
        />
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/nanum_square_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="#000000"
        android:text="이메일"
        />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:background="@drawable/underline"
        android:drawableEnd="@drawable/ic_checkbox3"
        android:hint="@string/input_email"
        android:inputType="textEmailAddress"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:singleLine="true"
        android:textColor="#545454"
        android:textColorHint="@color/color_hint"
        android:textSize="@dimen/_11sdp"
       android:fontFamily="@font/nanum_square_r" />

    <TextView

        android:id="@+id/tvInvalideEmailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/email_invalid_message"
        android:textColor="@color/color_error"
        android:textSize="@dimen/_9sdp"
        android:visibility="invisible"
        android:fontFamily="@font/nanum_square_r" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_emailSignUpArea"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/nanum_square_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="#000000"
        android:text="성별"
        />

<LinearLayout
    android:layout_marginTop="@dimen/_8sdp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvMale"
        android:textColor="@color/color_char_gray"
        android:fontFamily="@font/nanum_square_b"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_10sdp"
        android:gravity="center"
        android:text="남자"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/bg_002_2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/color_char_gray"
        android:id="@+id/tvFemale"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        android:text="여자"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="@drawable/bg_rounded_06"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nanum_square_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:text="@string/password"
            />

        <EditText

            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:background="@drawable/underline"
            android:drawableEnd="@drawable/ic_checkbox3"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:singleLine="true"
            android:textColor="#545454"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/_11sdp"
            />

        <TextView
            android:id="@+id/tvPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:singleLine="true"
            android:text="@string/password_invalid_message"
            android:textColor="@color/color_error"
            android:textSize="@dimen/_9sdp"
            android:visibility="invisible"
            android:fontFamily="@font/nanum_square_r" />

        <TextView
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/nanum_square_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:text="@string/password_confirm"
            />

        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:background="@drawable/underline"
            android:drawableEnd="@drawable/ic_checkbox3"
            android:hint="@string/password_confirm_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="#545454"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/_11sdp"
            />

        <TextView
            android:id="@+id/tvPasswordConfirmError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:singleLine="true"
            android:text="@string/password_confirm_invalid_message"
            android:textColor="@color/color_error"
            android:textSize="@dimen/_9sdp"
            android:visibility="invisible"
            android:fontFamily="@font/nanum_square_r" />

    </LinearLayout>


    <Button
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/btnRegistering"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/bg_rounded_03"
        android:text="다음 >"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/nanum_square_b" />
</LinearLayout>
        </ScrollView>



    </LinearLayout>

</layout>