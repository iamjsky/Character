<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.page.character.CharacterConfirmActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/bg_top_header"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt_back"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@color/color_transparent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ico_back" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/character_confirm"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                app:fontname="@{`NotoSansCJKkr-Medium.otf`}">

            </TextView>

        </RelativeLayout>

        <TextView
            android:id="@+id/txv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:textColor="@color/color_black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

        <TextView
            android:id="@+id/txv_character_ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:textColor="#333333"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_character_desc"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/svDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#6a6262"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />
            </ScrollView>

        </LinearLayout>

        <com.character.microblogapp.ui.widget.BaseTextView
            android:id="@+id/tv_style"
            android:layout_width="203dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_test_answer1"
            android:paddingTop="12dp"
            android:text="@string/like_style"
            android:textAlignment="center"
            android:textColor="@color/color_f24756"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

        <com.character.microblogapp.ui.widget.BaseTextView
            android:id="@+id/tv_job"
            android:layout_width="203dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_test_answer1"
            android:paddingTop="12dp"
            android:text="@string/like_job"
            android:textAlignment="center"
            android:textColor="@color/color_f24756"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

        <com.character.microblogapp.ui.widget.BaseTextView
            android:id="@+id/tv_office"
            android:layout_width="203dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_test_answer1"
            android:paddingTop="12dp"
            android:text="@string/like_office"
            android:textAlignment="center"
            android:textColor="@color/color_f24756"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

        <Button
            android:id="@+id/btn_again_test"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg_pink"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:text="@string/start_character"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

    </LinearLayout>

</layout>