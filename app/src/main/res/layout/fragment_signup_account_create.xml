<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        tools:context=".ui.page.intro.SignupActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/color_light_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/underline"
                        android:drawableStart="@drawable/ic_checkbox"
                        android:drawablePadding="12dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingTop="15dp"
                        android:paddingBottom="4dp"
                        android:tag="1"
                        android:text="@string/male"
                        android:textColor="@color/color_hint"
                        android:textSize="14sp"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <TextView
                        android:id="@+id/tvFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="43dp"
                        android:layout_weight="1"
                        android:background="@drawable/underline"
                        android:drawableStart="@drawable/ic_checkbox"
                        android:drawablePadding="12dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingTop="15dp"
                        android:paddingBottom="4dp"
                        android:tag="2"
                        android:text="@string/female"
                        android:textColor="@color/color_hint"
                        android:textSize="14sp"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/password"
                    android:textColor="@color/color_light_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline"
                    android:drawableStart="@drawable/ic_checkbox"
                    android:drawablePadding="12dp"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="15dp"
                    android:paddingBottom="4dp"
                    android:singleLine="true"
                    android:textColor="@color/color_light_dark"
                    android:textColorHint="@color/color_hint"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tvPasswordError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:text="@string/password_invalid_message"
                    android:textColor="@color/color_error"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/password_confirm"
                    android:textColor="@color/color_light_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <EditText
                    android:id="@+id/etPasswordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline"
                    android:drawableStart="@drawable/ic_checkbox"
                    android:drawablePadding="12dp"
                    android:hint="@string/password_confirm_hint"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="15dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/color_light_dark"
                    android:textColorHint="@color/color_hint"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:id="@+id/tvPasswordConfirmError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/password_confirm_invalid_message"
                    android:textColor="@color/color_error"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnRegistering"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg_pink"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:text="@string/registering"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

    </LinearLayout>

</layout>