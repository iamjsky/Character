<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical"
        tools:context=".ui.page.character.CharacterActivity">


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f6f6f6"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="@dimen/_122sdp"
                android:background="@drawable/bg_img" />

            <LinearLayout
                android:paddingRight="@dimen/_14sdp"
                android:paddingLeft="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rlt_back"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/comm_ico_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_b"
                    android:text="DISC 성격테스트"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlInfo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:background="@color/color_transparent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/test_ico_question" />

            </RelativeLayout>
            <FrameLayout

                android:layout_marginTop="@dimen/_52sdp"

                android:id="@+id/flContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/color_transparent" />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp">
            <TextView
                android:id="@+id/tv_bottomCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_r"
                android:gravity="center|bottom"
                android:text="0"
                android:textColor="#858585"
                android:textSize="@dimen/_10sdp" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="horizontal">

                <TextView
                    android:gravity="right"
                    android:id="@+id/tv_bottomCountText"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_b"

                    android:text="1번째"
                    android:textColor="@color/char_main_color"
                    android:textSize="@dimen/_10sdp" />

                <TextView

                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_r"

                    android:text="문항 진행중입니다."
                    android:textColor="#545454"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bottomTotalCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_r"
                android:gravity="center|bottom"
                android:text="28"
                android:textColor="#858585"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:id="@+id/pb_countBar"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_8sdp"
            app:rcMax="0"
            app:rcAnimationEnable="true"
            app:rcBackgroundColor="#D5D5D5"
            app:rcRadius="10dp"
            app:rcProgressColor="@color/char_main_color"
            app:rcProgress="0"

            />
        <Button
            android:id="@+id/btn_character_next"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_rounded_07"
            android:text="@string/character_before"
            android:textColor="#545454"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/nanum_square_b" />

<!--        <Button-->
<!--            android:id="@+id/btn_character_before"-->
<!--            android:layout_marginBottom="@dimen/_30sdp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="@dimen/_100sdp"-->
<!--            android:layout_height="@dimen/_38sdp"-->
<!--            android:background="@drawable/bg_rounded_07"-->
<!--            android:text="@string/character_before"-->
<!--            android:textColor="#545454"-->
<!--            android:textSize="@dimen/_12sdp"-->
<!--            android:fontFamily="@font/nanum_square_b" />-->



    </LinearLayout>

</layout>