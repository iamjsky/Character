<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        tools:context=".ui.page.intro.FindIdActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt_back"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@color/color_transparent"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/add_img_007" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="비밀번호 재설정"
                android:textColor="@color/color_dark"
                android:textSize="15sp"
                app:fontname="@{`NotoSansCJKkr-Medium.otf`}">

            </TextView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/name"
                    android:textColor="@color/color_light_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/underline"
                    android:drawableStart="@drawable/ic_checkbox"
                    android:drawablePadding="12dp"
                    android:hint="@string/input_name"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingTop="15dp"
                    android:paddingBottom="4dp"
                    android:singleLine="true"
                    android:textColor="@color/color_light_dark"
                    android:textColorHint="@color/color_hint"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/birthday"
                    android:textColor="@color/color_light_dark"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/underline"
                    android:drawableStart="@drawable/ic_checkbox"
                    android:drawablePadding="12dp"
                    android:hint="@string/input_birthday"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:paddingTop="15dp"
                    android:paddingBottom="4dp"
                    android:singleLine="true"
                    android:textColor="@color/color_light_dark"
                    android:textColorHint="@color/color_hint"
                    android:textSize="14sp"
                    app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnFind"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg_pink"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="10dp"
            android:text="비밀번호 재설정"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

    </LinearLayout>

</layout>