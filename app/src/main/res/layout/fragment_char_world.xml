<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
         >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

              >


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_122sdp"
                    android:background="@drawable/bg_img" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/jalnan_n"
                        android:gravity="center|left"
                        android:text="성격지상주의"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:id="@+id/layout_myPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/main_top_energy" />

                        <TextView
                            android:id="@+id/tv_my_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_b"
                            android:gravity="center|right"
                            android:text="100"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_marginTop="@dimen/_58sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_265sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/world_img"
                            android:padding="@dimen/_20sdp">

                            <!--                    <ImageView-->
                            <!--                        android:visibility="gone"-->
                            <!--                        android:paddingBottom="@dimen/_12sdp"-->
                            <!--                        android:paddingRight="@dimen/_40sdp"-->
                            <!--                        android:paddingLeft="@dimen/_40sdp"-->
                            <!--                        android:layout_alignParentBottom="true"-->
                            <!--                        android:id="@+id/iv_worldImg"-->
                            <!--                        android:layout_width="match_parent"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:adjustViewBounds="true"-->
                            <!--                        android:src="@drawable/world_img_resize" />-->

                            <LinearLayout
                                android:layout_width="match_parent"


                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:background="@color/color_transparent">

                                    <TextView
                                        android:id="@+id/tv_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/color_transparent"
                                        android:fontFamily="@font/jalnan_n"
                                        android:gravity="center"
                                        android:text="TITLE"
                                        android:textColor="#ff0000"

                                        android:textSize="@dimen/_20sdp" />

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/tv_title"
                                        android:gravity="center"

                                        android:paddingRight="@dimen/_2sdp">

                                        <View

                                            android:layout_width="@dimen/_57sdp"
                                            android:layout_height="@dimen/_5sdp"

                                            android:background="#1AFF0000" />
                                    </LinearLayout>


                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_9sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_square_b"

                                        android:gravity="center"
                                        android:text="성격월드"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"
                                        android:text="에 오신 것을 환영합니다!"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_square_b"
                                        android:gravity="center"
                                        android:text="성격월드"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"
                                        android:text="에 대한 간단한 텍스트가 들어갑니다."
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:layout_marginRight="@dimen/_13sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:gravity="center|top"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:id="@+id/layout_charInfo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_rounded_white_01"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/_14sdp"
                                    android:paddingTop="@dimen/_14sdp"

                                    android:paddingBottom="@dimen/_14sdp">

                                    <ImageView

                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:adjustViewBounds="true"
                                        android:src="@drawable/world_ico_01_info" />

                                    <TextView

                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"

                                        android:text="성격\n정보"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/_14sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:paddingTop="@dimen/_14sdp"
                                    android:paddingBottom="@dimen/_14sdp"
                                    android:paddingLeft="@dimen/_14sdp"

                                    android:id="@+id/layout_relation"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"

                                    android:layout_weight="1"
                                    android:background="@drawable/bg_rounded_white_01"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:adjustViewBounds="true"
                                        android:src="@drawable/world_ico_02_relation" />

                                    <TextView

                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"

                                        android:text="성격\n궁합"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/_14sdp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_14sdp"
                                    android:paddingBottom="@dimen/_14sdp"
                                    android:paddingLeft="@dimen/_14sdp"

                                    android:id="@+id/layout_charTest"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_rounded_white_01"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:adjustViewBounds="true"
                                        android:src="@drawable/world_ico_03_test" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"

                                        android:text="성격\n테스트"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/_14sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:paddingTop="@dimen/_14sdp"
                                    android:paddingBottom="@dimen/_14sdp"
                                    android:paddingLeft="@dimen/_14sdp"

                                    android:id="@+id/layout_community"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_rounded_white_01"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:adjustViewBounds="true"
                                        android:src="@drawable/world_ico_04_community" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nanum_square_r"
                                        android:gravity="center"
                                        android:text="커뮤\n니티"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/_14sdp" />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</layout>