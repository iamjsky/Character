<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/rlBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="wrap_content">

            <com.character.microblogapp.ui.widget.RoundImageView
                android:id="@+id/imgProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:src="@drawable/temp_user_round"
                app:border_radius="17.5dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="김연자"
                android:textColor="@color/color_black"
                android:textSize="11sp"
                app:fontname="@{`NotoSansCJKkr-Medium.otf`}"/>

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:minHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/temp_item_1"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_balloon_top_right" />

            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#f7f7f7"
                android:minHeight="50dp"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp"
                android:text="테스트입니다."
                android:textColor="@color/color_black"
                android:textSize="14sp"
                app:fontname="@{`NotoSansCJKkr-Regular.otf`}"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019.12.17 15:30"
                android:textColor="#666666"
                android:textSize="10sp"
                app:fontname="@{`NotoSansCJKkr-Regular.otf`}"/>

        </LinearLayout>

    </LinearLayout>

</layout>
