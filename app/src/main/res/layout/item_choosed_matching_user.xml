<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="277dp"
        android:layout_marginLeft="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="270dp">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_user_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rect_storke_80ffffff"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/ll_profile"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/txv_character1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:fontname="@{`NanumSquareRoundEB.ttf`}" />

                    <TextView
                        android:id="@+id/txv_character2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_fe013c"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:fontname="@{`NanumSquareRoundEB.ttf`}" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txv_ideal_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/color_black"
                    android:textSize="10sp"
                    app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_eval_profile_white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        app:fontname="@{`NotoSansCJKkr-Bold.otf`}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />


                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:fontname="@{`NotoSansCJKkr-Regular.otf`}" />


                </LinearLayout>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</layout>